    <fragment
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop = "70dp"
        android:layout_weight="50"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
